<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/two_line_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:clickable="true"
    android:minHeight="72dp"
    android:paddingEnd="?listPreferredItemPaddingRight"
    android:paddingLeft="?listPreferredItemPaddingLeft"
    android:paddingRight="?listPreferredItemPaddingRight"
    android:paddingStart="?listPreferredItemPaddingLeft" android:focusable="true">


    <ImageView

        android:id="@+id/primary_action"

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerInside"
        android:src="@drawable/ic_confirmation_number_black_40dp" android:contentDescription="TODO" />

    <LinearLayout
        android:id="@+id/lines_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/primary_action"
        android:layout_toLeftOf="@+id/secondary_action"
        android:layout_toRightOf="@+id/primary_action"
        android:layout_toStartOf="@+id/secondary_action"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingTop="14dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_numero_boleto"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                android:textColor="@color/secondaryTextColor"
                android:textSize="22sp"
                tools:text="20001" />

            <TextView
                android:id="@+id/nombre_sorteo"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/SecondaryTextColor"
                tools:text="Loteria del Niño" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView

                android:id="@+id/second_price_text_view"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/SecondaryTextColor"
                tools:text="No premiado" />

            <TextView

                android:id="@+id/first_price_text_view"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                android:textColor="@color/secondaryTextColor"
                android:textSize="22sp"
                tools:text="0€" />

        </LinearLayout>


    </LinearLayout>


    <!-- Can be replaced by a widget -->

    <ImageView

        android:id="@+id/secondary_action"

        android:layout_width="40dp"

        android:layout_height="40dp"

        android:layout_alignParentEnd="true"

        android:layout_alignParentRight="true"

        android:layout_marginEnd="16dp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"

        android:scaleType="centerInside"
        android:src="@drawable/ic_delete_forever_black_24dp" android:contentDescription="TODO" />

</RelativeLayout>